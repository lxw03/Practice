<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/me_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animation Test"/>
            <Button
                android:id="@+id/me_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TypeEvaluator Test"/>
            <Button
                android:id="@+id/me_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Test"/>
            <Button
                android:id="@+id/me_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StatusBar Test"/>
            <Button
                android:id="@+id/me_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snackbar Test"/>
            <Button
                android:id="@+id/me_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danmuku Test"/>
            <Button
                android:id="@+id/me_btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Percent Test"/>
            <Button
                android:id="@+id/me_btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Face Test"/>
            <Button
                android:id="@+id/me_btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WindowManager Test"/>
            <Button
                android:id="@+id/me_btn10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RemoteViews Test"/>
            <Button
                android:id="@+id/me_btn11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sound_Recording"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
