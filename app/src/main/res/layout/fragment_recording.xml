<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:gravity="center_horizontal"
    >

    <LinearLayout
        android:id="@+id/record_chronometer_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@drawable/recording_background"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        >
        <Chronometer
            android:id="@+id/record_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textAlignment="center"
            />
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/record_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_mic_white_36dp"
        app:backgroundTint="@color/main_color"
        android:layout_below="@id/record_chronometer_layout"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
