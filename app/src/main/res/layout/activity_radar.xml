<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:id="@+id/radar_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="开始"
        />

    <Button
        android:id="@+id/radar_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="暂停"
        />

    <com.example.cw.practice.practice.shader.RadarView
        android:id="@+id/radar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radar_start_btn"
        />

    <com.example.cw.practice.practice.shader.LinearGradientText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱奇艺爱奇艺爱奇艺爱奇艺"
        android:layout_below="@+id/radar_view"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        />

</RelativeLayout>
